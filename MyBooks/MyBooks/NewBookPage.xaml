<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyBooks.NewBookPage">
    <StackLayout Margin="10,10,10,0">
        <Entry x:Name="nameEntry" Placeholder="Write the name of the book"/>
        <Entry x:Name="authorEntry" Placeholder="Write the author of the book"/>
        <Button Text="Save"
                Clicked="Button_Clicked"/>
    </StackLayout>
</ContentPage>